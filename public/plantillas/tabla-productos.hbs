<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Listado de Productos</h2>
<div class="table-responsive">
    <table class="table table-light">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
    {{#each productos}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" style="width: 50px; height:40px"></td>
        </tr>
    {{/each}}
    </table>
</div>
{{/if}}{{#else}} 
            <h3 class="alert alert-info">No se encontro ningun producto</h3>
        {{/else}}